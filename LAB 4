#include<stdio.h>  
 int main()    
{    
int n,sum=0,m;
clrscr();    
printf("Enter a number:");    
scanf("%d",&n);    
while(n>0)    
{    
m=n%10;    
sum=sum+m;    
n=n/10;    
}    
printf("Sum is=%d",sum);  
getch();  
return 0;  
}   

#include<stdio.h>
int main()
{
int i,num;
clrscr();
printf("enter the number between 1-100 \n");
scanf("%d ",&num);
if(num>0)
{
for(i=num;i<=100;i=i+num)
{
printf("%d",i);
}
}
else
{
printf("wrong number entered");
}
getch();
return 0;
}

#include <stdio.h>
int main()
 {
	int i,m,n;
	printf("enter the value of m and n \n");
	scanf("%d%d", &m,&n);
	if(m<n)
	{
	for (i = m; i <= n; i++)
	{
		if(i%2 == 0)
		{
		  printf("%d ", i);
		}
	} }
getch();
return 0;
}
